<div class="container">
    <div class="row">
    <div class="page_title">
    <h2>パスワード変更</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <div class="col-sm-5">
      <table class="table table-border-less">
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <tr>
        <div class="field">
          <th><%= f.label :password, "新しいパスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          </th>
          <td><%= f.password_field :password, autofocus: true, autocomplete: "new-password" %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <th><%= f.label :password_confirmation, "新しいパスワード（確認）" %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </div>
      </tr>

      </table>
      <div class="actions">
        <%= f.submit "変更", class:"btn btn-primary btn-block" %>
      </div>
      </div>
    <% end %>

    </div>
</div>
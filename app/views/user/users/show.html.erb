<div class="container">
    <div class="row">
    <div class="page_title">
    <h2><%= @user.name %>さんのプロフィール</h2>
    </div>

    <div class="col-sm-offset-4 col-sm-4">
        <%# プロフィール写真 %>
            <%= attachment_image_tag @user, :user_image, :fill, 400, 500, fallback: "no_image.jpg", size:'400x500' %>
        <%# ニックネーム %>
            <div class="setting_name">
                <%= @user.name %>
            </div>
        <%# 生年月日から年齢を計算 %>
            <div class="setting_profile">
                <% birthdate = @user.birth_date%>
                <%= (Date.today.strftime("%Y%m%d").to_i - birthdate.strftime("%Y%m%d").to_i) / 10000 %>歳
        <%# 都道府県 %>
                <%= @user.prefecture_cd %>
            </div>
    </div>
    <div class="col-sm-offset-4 col-sm-4">
        <table class="table">
            <tr>
                <th>職種</th>
                <td><%= @user.job_cd %></td>
            </tr>
            <tr>
                <th>身長</th>
                <td><%= @user.height_cd %></td>
            </tr>
            <tr>
                <th>年収</th>
                <td><%= @user.income_cd %></td>
            </tr>
            <tr>
                <th>婚姻歴</th>
                <td><%= @user.marriage_history_cd %></td>
            </tr>
            <tr>
                <th>結婚に対する意思</th>
                <td><%= @user.marriage_purpose_cd %></td>
            </tr>
            <tr>
                <th>同居人</th>
                <td><%= @user.housemate_cd %></td>
            </tr>
            <tr>
                <th>休日</th>
                <td><%= @user.holiday_cd %></td>
            </tr>
            <tr>
                <th>お酒</th>
                <td><%= @user.alcohol_cd %></td>
            </tr>
            <tr>
                <th>タバコ</th>
                <td><%= @user.cigaret_cd %></td>
            </tr>
            <tr>
                <th>自己紹介</th>
                <td><%= @user.introduction %></td>
            </tr>
        </table>
    </div>
    <div class="col-sm-offset-4 col-sm-4">
        <%# actionが未作成の場合 %>
        <% if @action.id == nil %>
            <%= form_for(@action, url: actions_path) do |f| %>
                <%# ログインユーザが男性の場合 %>
                <% if current_user.gender_cd == "男性" %>
                    <%= f.hidden_field :male_user_id, value:current_user.id %>
                    <%= f.hidden_field :female_user_id, value:@user.id %>
                    <%= f.hidden_field :male_matching_at, value:DateTime.now %>
                <%# ログインユーザが女性の場合 %>
                <% else %>
                    <%= f.hidden_field :male_user_id, value:@user.id %>
                    <%= f.hidden_field :female_user_id, value:current_user.id %>
                    <%= f.hidden_field :female_matching_at, value:DateTime.now %>
                <% end %>
                <%= f.submit 'いいね', class: 'like_btn' %>
            <% end %>
        <%# actionが既に存在する場合 %>
        <% else %>
            <%= form_for(@action, url: action_path(@action.id)) do |f| %>
                <%# ログインユーザが男性の場合 %>
                <% if current_user.gender_cd == "男性" %>
                    <%= f.hidden_field :male_matching_at, value:DateTime.now %>
                    <%= f.hidden_field :matching_at, value:DateTime.now %>
                <%# ログインユーザが女性の場合 %>
                <% else %>
                    <%= f.hidden_field :female_matching_at, value:DateTime.now %>
                    <%= f.hidden_field :matching_at, value:DateTime.now %>
                <% end %>
                <%= f.submit 'お相手から', class: 'like_btn' %>
            <% end %>
        <% end %>
    </div>
    </div>
</div>
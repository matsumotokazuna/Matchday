<div class="col-sm-12">
<div class="col-sm-offset-2 col-sm-8">
<div class="search_form">
    <h4><span class="glyphicon glyphicon-search" aria-hidden="true"></span> 検索</h4>
    <%= form_tag(search_path,:method => 'get') do %>
        <div class="search_prefecture">
            都道府県：<%= select_tag 'search_prefecture', options_for_select( User.prefecture_cds.keys), include_blank: true %>
        </div>
        <div class="search_age">
            年齢：<%= select_tag 'min_age', options_for_select((20..60).to_a), include_blank: true %>
            〜<%= select_tag 'max_age', options_for_select((20..60).to_a), include_blank: true %>
        </div>
        <div class="search_btn">
            <%= submit_tag '検索', class:"btn btn-primary" %>
        </div>
    <% end %>
</div>
</div>
</div>
